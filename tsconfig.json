{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["node", "react", "@react-email/components"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "scripts/**/*",
    "utils/**/*",
    "components/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
